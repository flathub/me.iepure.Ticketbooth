{
    "id": "me.iepure.Ticketbooth",
    "runtime": "org.gnome.Platform",
    "runtime-version": "47",
    "sdk": "org.gnome.Sdk",
    "command": "ticketbooth",
    "finish-args": [
        "--share=network",
        "--share=ipc",
        "--socket=fallback-x11",
        "--device=dri",
        "--socket=wayland",
        "--talk-name=org.gtk.vfs.*",
        "--filesystem=xdg-run/gvfsd"
    ],
    "cleanup": [
        "/include",
        "/lib/pkgconfig",
        "/man",
        "/share/doc",
        "/share/gtk-doc",
        "/share/man",
        "/share/pkgconfig",
        "*.la",
        "*.a"
    ],
    "modules": [
        "pypi-dependencies.json",
        {
            "name": "blueprint-compiler",
		  	"buildsystem": "meson",
		  	"cleanup": [
				"*"
		  	],
		  	"sources": [
				{
				  "type": "git",
				  "url": "https://gitlab.gnome.org/jwestman/blueprint-compiler",
				  "tag": "v0.16.0"
				}
		  	]
		},
        {
            "name": "ticketbooth",
            "buildsystem": "meson",
            "config-opts": [
                "-Dprerelease=false"
            ],
            "post-install": [
                "mv /app/bin/ticketbooth /app/bin/ticketbooth-bin",
                "install -Dm755 /app/ticketbooth/ticketbooth-run-script /app/bin/ticketbooth"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/aleiepure/ticketbooth",
                    "tag": "v1.1",
                    "commit": "2863dca590e432c005bf3cd1c0640d389ea34f28"
                }
            ]
        }
    ]
}
